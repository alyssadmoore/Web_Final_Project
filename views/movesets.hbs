<h1>Movesets</h1>
{{> navigation}}

<div class="newmoveset">
    <p></p>
    <form action="/newmoveset" method="POST">
        <label for="title">Moveset Name:</label>
        <input type="text" id="title" name="title">
        <input type="submit" value="Create a new moveset">
    </form>
</div>

<!-- Max 4 moves to a moveset -->
<div class="moves">
    <ol>
        {{#each moves}}
            <p>{{this.title}}:
            <form action="/removeFromMoveset" method="GET">
                <input type="hidden" id="id" name="id" value={{this._id}}>
                <input type="submit" value="Remove a move from this moveset">
            </form>
            <form action="/deleteMoveset" method="GET">
                <input type="hidden" id="moveset" name="moveset" value={{this._id}}>
                <input type="submit" value="Delete this moveset">
            </form>
            </p>
            <li>{{this.m1}}</li>
            <li>{{this.m2}}</li>
            <li>{{this.m3}}</li>
            <li>{{this.m4}}</li>
            <br>
        {{/each}}
    </ol>
</div>