                <input type="hidden" id="moveset" name="moveset" value={{moveset._id}}>
                <input type="hidden" id="move" name="move" value="m2">
                <input type="submit" value="Remove">
            </form>
        {{/if}}
        <li>{{moveset.m3}}</li>
        {{#if moveset.m3}}
            <form action="/removeFromMoveset" method="POST">
                <input type="hidden" id="moveset" name="moveset" value={{moveset._id}}>
                <input type="hidden" id="move" name="move" value="m3">
                <input type="submit" value="Remove">
            </form>
        {{/if}}
        <li>{{moveset.p4}}</li>
        {{#if moveset.p4}}
            <form action="/removeFromMoveset" method="POST">
                <input type="hidden" id="moveset" name="moveset" value={{moveset._id}}>
                <input type="hidden" id="move" name="move" value="m4">
                <input type="submit" value="Remove">
            </form>
        {{/if}}
    </ol>
</div>