<div class="center">
    <h1>Pokemon Teams</h1>
</div>
{{> navigation}}

<h2>To which team would you like to save this pokemon?</h2>

<!-- Max 6 pokemon to a team -->
<div class="team">
    <ol>
        {{#each pokemon}}
            <p>{{this.title}}:</p>
            <li>{{this.p1}}</li>
            <li>{{this.p2}}</li>
            <li>{{this.p3}}</li>
            <li>{{this.p4}}</li>
            <li>{{this.p5}}</li>
            <li>{{this.p6}}</li>
            <br>
            <form action="/savePokemon" method="POST">
                <input type="hidden" value="{{ this._id }}" id="id" name="id">
                <input type="hidden" value="{{ ../name }}" id="name" name="name">
                <input type="submit" value="Save to this team">
            </form>
            <br>
        {{/each}}
    </ol>
</div>